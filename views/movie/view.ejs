<%- include('../includes/head.ejs') %>
  </head>

  <body>
    <div class="mx-auto card mb-3 movie-preview-card">
      <div class="row no-gutters">
        <div class="col-md-4">
          <img
            src="/images/posters/<%= movie.imageName + movie.imageExt %>"
            class="card-img-top"
            alt="<%= movie.title %>"
            title="<%= movie.imageName + movie.imageExt %>"
          />
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title"><%= movie.title %></h5>
            <p class="card-text"><%= movie.description %></p>
            <p class="card-text">
              <small class="text-muted">Created Date: <%= moment(movie.createdAt).format( 'DD MMM YYYY') %></small>
            </p>
            <% if(movie.originalLink) { %>
              <a href="<%= movie.originalLink %>" class="card-link"><%= movie.originalLink %></a>
            <% } else { %>
              N/A
            <% } %>
          </div>
        </div>
      </div>
    </div>
    <%- include('../includes/end.ejs') %>

